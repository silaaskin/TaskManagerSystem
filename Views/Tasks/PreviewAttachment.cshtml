@model TaskManagerSystem.Models.PreviewViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Dosya Önizleme";
}

<style>
    .preview-container {
        background: linear-gradient(135deg, #1e1e2e 0%, #27293d 100%);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 3rem;
        text-align: center;
    }

    .file-icon-large {
        width: 120px;
        height: 120px;
        margin: 0 auto 2rem;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
    }

    .file-icon-word {
        background: linear-gradient(135deg, #2b579a 0%, #1e4a8a 100%);
    }

    .file-icon-excel {
        background: linear-gradient(135deg, #217346 0%, #185c37 100%);
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="preview-container shadow-lg">
                @if (Model.FileType.Contains("Word"))
                {
                    <div class="file-icon-large file-icon-word">
                        <i class="fa-solid fa-file-word text-white"></i>
                    </div>
                }
                else if (Model.FileType.Contains("Excel"))
                {
                    <div class="file-icon-large file-icon-excel">
                        <i class="fa-solid fa-file-excel text-white"></i>
                    </div>
                }

                <h3 class="text-white mb-3">@Model.FileName</h3>
                <p class="text-white-50 mb-2">@Model.FileType</p>
                <p class="text-white-50 mb-4">Boyut: @((Model.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</p>

                <div class="alert alert-info mb-4">
                    <i class="fa-solid fa-info-circle me-2"></i>
                    @Model.Message
                </div>

                <div class="d-flex gap-3 justify-content-center">
                    <a href="@Model.DownloadUrl" class="btn btn-success btn-lg px-5 rounded-pill">
                        <i class="fa-solid fa-download me-2"></i>İndir
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-light btn-lg px-5 rounded-pill">
                        <i class="fa-solid fa-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>