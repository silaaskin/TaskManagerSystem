<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Manager</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        /* Taslak Renk Paleti */
        :root {
            --bg-deep-purple: #1e1e2f; /* Ana Arka Plan */
            --navbar-bg: rgba(30, 30, 47, 0.95);
            --accent-purple: #ba54f5; /* Parlak Mor */
            --card-purple: #27293d;
        }

        body {
            background-color: var(--bg-deep-purple);
            color: #ffffff;
            min-height: 100vh;
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            margin: 0;
            overflow-x: hidden;
        }

        /* Cam (Glassmorphism) Efektli Navbar */
        .navbar {
            background: var(--navbar-bg) !important;
            backdrop-filter: blur(15px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding: 15px 0;
            z-index: 1000;
        }

        .navbar-brand {
            color: white !important;
            font-weight: 800;
            font-size: 1.4rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

            .navbar-brand i {
                color: var(--accent-purple);
                text-shadow: 0 0 10px rgba(186, 84, 245, 0.5);
            }

        /* Kullanıcı Bilgisi ve Badge */
        .user-nav-box {
            background: rgba(255, 255, 255, 0.03);
            padding: 6px 15px;
            border-radius: 30px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .admin-badge-nav {
            background: linear-gradient(135deg, #ba54f5 0%, #e14eca 100%);
            color: white;
            font-size: 0.65rem;
            font-weight: bold;
            padding: 3px 10px;
            border-radius: 8px;
            margin-left: 10px;
            text-transform: uppercase;
            box-shadow: 0 4px 10px rgba(186, 84, 245, 0.3);
        }

        /* Çıkış Butonu */
        .btn-logout {
            background: transparent;
            border: 1px solid rgba(253, 93, 147, 0.5);
            color: #fd5d93 !important;
            border-radius: 20px;
            padding: 5px 15px;
            transition: 0.3s;
            font-size: 0.85rem;
        }

            .btn-logout:hover {
                background: #fd5d93;
                color: white !important;
                box-shadow: 0 4px 12px rgba(253, 93, 147, 0.4);
            }

        /* Ana İçerik Taşıyıcı - Genişletildi */
        .main-content {
            padding-top: 30px;
            padding-bottom: 50px;
        }

        /* Scrollbar'ı özelleştirme (Modern görünüm için) */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bg-deep-purple);
        }

        ::-webkit-scrollbar-thumb {
            background: #32325d;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--accent-purple);
            }
    </style>
</head>
<body>

    @{
        var userId = Context.Session.GetInt32("UserId");
        var userName = Context.Session.GetString("UserName");
        var userRole = Context.Session.GetString("UserRole");
        var currentPage = ViewContext.RouteData.Values["action"]?.ToString();
    }

    @* Navbar sadece Login ve Register sayfalarında gizlenir *@
    @if (currentPage != "Login" && currentPage != "Register")
    {
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container-fluid px-lg-5">
                <a class="navbar-brand" href="/Tasks/Index">
                    <i class="fa-solid fa-layer-group me-2"></i>Task<span style="color: var(--accent-purple)">Manager</span>
                </a>

                @if (userId != null)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navRes">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navRes">
                        <div class="d-flex align-items-center ms-auto mt-3 mt-lg-0">
                            <div class="user-nav-box d-flex align-items-center me-3">
                                <i class="fa-solid fa-circle-user fs-5 text-white-50 me-2"></i>
                                <span class="small fw-bold">@userName</span>
                                @if (userRole == "Admin")
                                {
                                    <span class="admin-badge-nav">Admin</span>
                                }
                            </div>

                            <form method="post" asp-controller="Account" asp-action="Logout" class="m-0">
                                <button type="submit" class="btn btn-logout shadow-sm">
                                    <i class="fa-solid fa-power-off me-1"></i> Çıkış
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </nav>
    }

    <div class="container-fluid px-lg-5 main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>